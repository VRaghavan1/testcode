{
  "tasks": [
    {
      "taskCode": "CreateDataCollection-rovi-channel-to-series",
      "taskClass": "CreateDataCollection",
      "taskConfigurationTemplate": {
        "in": {"properties": [
            "Source_ID.raw", 
            "Series_ID.raw"]},
        "params": {
          "customerCode": "rogers",
          "dataRepositoryCode": "eclipse-dev",
          "dataCollectionCode": "rovi-channel-to-series",
          "dataRecordIdentifierProperty": "id",
          "name": "",
          "successIfExists": true
        }
      }
    }
    ,
    {
      "taskCode": "TruncateDataCollection-rovi-channel-to-series",
      "taskClass": "TruncateDataCollection",
      "taskConfigurationTemplate": {
        "params": {
          "customerCode": "rogers",
          "dataRepositoryCode": "eclipse-dev",
          "dataCollectionCode": "rovi-channel-to-series"
        }
      }
    }
    ,
    {
      "taskCode": "UniqueDataRecordPropertiesToDataRecord",
      "taskConfigurationTemplate": {
        "params": {
            "datareposervice_host": "localhost",
            "datareposervice_port": "40380",
            "customer_code": "rogers",
              "datarepo_code": "eclipse-dev",
              "datarepo_collection_code": "rovi-schedule-source"
        }
      }
    }
    ,
   {
      "taskCode": "HydrateDataRecord",
      "taskConfigurationTemplate": {
        "params": {
          "hydrate_configuration": [
            {
            "matchConfiguration": {
              "customerCode": "rogers",
              "dataRepositoryCode": "eclipse-dev",
              "dataCollectionCode": "rovi-channels-source",
              "baseRecordLookupPropertyName": "Source_ID",
              "lookupIdPropertyNames": ["source_id"],
              "uniqueRecords": true
            },
            "enrichConfiguration": {
              "channelCallLetter": 
                "$.matchingRecords[0].call_letters"
              
            }
          },
          {
            "matchConfiguration": {
              "customerCode": "rogers",
              "dataRepositoryCode": "eclipse-dev",
              "dataCollectionCode": "rovi-series-source",
              "baseRecordLookupPropertyName": "Series_ID",
              "lookupIdPropertyNames": ["series_id"],
              "uniqueRecords": true
            },
            "enrichConfiguration": {
              "fullTitle": "$.matchingRecords[0].full_title",
              "synopsis": "$.matchingRecords[0].synopsis"
            }
          }
        ]
      }
      }
    }
    ,
    {
      "taskCode": "DataRecordToDataRepositoryBulk",
      "taskConfigurationTemplate": {
        "params": {
          "customerCode": "rogers",
          "dataRepositoryCode": "eclipse-dev",
          "dataCollectionCode": "rovi-channel-to-series"
        }
      }
    }
  ]
}