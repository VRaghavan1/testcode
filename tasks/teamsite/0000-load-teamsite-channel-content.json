{
  "tasks": [
    {
      "taskCode": "CreateDataCollection",
      "taskConfigurationTemplate": {
        "in": "{DATA_PROCESSING_FOUNDATION_TS_CHANNEL_CONTENT_FOLDER}",
        "params": {
          "datareposervice_host": "{DATA_REPOSITORY_SERVICE_HOST}",
          "datareposervice_port": "{DATA_REPOSITORY_SERVICE_PORT}",
          "customerCode": "{CUSTOMER_CODE}",
          "dataRepositoryCode": "{DATA_REPOSITORY_CODE}",
          "dataCollectionCode": "teamsite-channel-content-source",
          "dataRecordIdentifierProperty": "id",
          "successIfExists": true
        }
      }
    },
    {
      "taskCode": "TruncateDataCollection",
      "taskConfigurationTemplate": {
        "params": {
          "datareposervice_host": "{DATA_REPOSITORY_SERVICE_HOST}",
          "datareposervice_port": "{DATA_REPOSITORY_SERVICE_PORT}",
          "customerCode": "{CUSTOMER_CODE}",
          "dataRepositoryCode": "{DATA_REPOSITORY_CODE}",
          "dataCollectionCode": "teamsite-channel-content-source"
        }
      }
    },
    {
      "taskCode": "TeamsiteDcrXmlExportFileFolderToDataRecord",
      "taskConfigurationTemplate": {
        "params": {
          "file_pattern": "**/*",
          "value_delimeter": ","
        }
      }
    },
    {
      "taskCode": "RemoveProperty",
      "taskConfigurationTemplate": {
        "params": {
          "property": [
            "english.product_info.channel_include", 
            "french.product_info.channel_include", 
            "english.product_info.long_desc", 
            "french.product_info.long_desc", 
            "english.product_info.short_desc2", 
            "french.product_info.short_desc2",
            "english.product_info.premium_channel",
            "french.product_info.premium_channel"]
        }
      }
    },

    {
      "taskCode": "DataRecordToDataRepositoryBulk",
      "taskConfigurationTemplate": {
        "params": {
          "customerCode": "rogers",
          "dataRepositoryCode": "eclipse-dev",
          "dataCollectionCode": "teamsite-channel-content-source"
        }
      }
    }
  ]
}

